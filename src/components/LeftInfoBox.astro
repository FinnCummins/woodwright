---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
import InfoCard from './InfoCard.astro';
---

<div id="left-info-box" class="flex flex-col-reverse md:flex-row justify-center items-center my-8 md:my-8 md:px-4 py-2 px-8">
    <InfoCard href={href} title={title} body={body} class="mr-8 my-8 md:my-0 mr-8"/>
    <img src="/stockCarpentryImage5.jpg" alt="StockCarpentryImage" class="h-64 w-100 ml-8 rounded-lg shadow-md my-4 md:my-0">
</div>






