---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
import InfoCard from './InfoCard.astro';
---

<div id="right-info-box" class="flex justify-end items-center md: px-4 py-2 px-8">
    <img src="/stockCarpentryImage5.jpg" alt="StockCarpentryImage" class="h-64 w-100 mr-8 rounded-lg shadow-md">
    <InfoCard href={href} title={title} body={body} class="ml-8"/>
</div>




